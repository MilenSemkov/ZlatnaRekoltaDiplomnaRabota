@model ZlatnaRekolta.Data.Product

@{
	ViewData["Title"] = "Details";
}

<h1>Детайли</h1>

<div>
	<h4>Продукти</h4>
	<hr />
	<div id="cards" class="card d-flex flex-row align-items-center p-3">
		
			<div class="col-md-6 text-center">
				<img src="@Html.DisplayFor(model => model.URLimage)" width="400" class="img-fluid" />
			</div>
		<div class="col-md-6">
			<div class="card-body text-left">
				<h5 class="card-title">@Html.DisplayFor(model => model.Name)</h5>
				<p class="card-text">@Html.DisplayFor(model => model.Origins.Name)</p>
				<p class="card-text">@Html.DisplayFor(model => model.Description)</p>
				<p class="card-text"><strong>Цена: @Html.DisplayFor(model => model.Price)/@Html.DisplayFor(model => model.UnitOfMe) лв.</strong></p>
				<br />
				<a asp-controller="Orders" asp-action="Create" asp-route-ProductId="model.Id" style="background-color:goldenrod;padding:1% 10%;text-decoration:none; color:black;font-size:20px;">Buy</a>
			</div>
	</div>
	</div>
	<dl class="row">
		<dt class="col-sm-2">
			@* @Html.DisplayNameFor(model => model.Name) *@ Наименование
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Name)
		</dd>
		<dt class="col-sm-2">
			@* @Html.DisplayNameFor(model => model.Categories) *@ Категории
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Categories.Name)
		</dd>
		<dt class="col-sm-2">
			@* @Html.DisplayNameFor(model => model.Origins) *@ Произход
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Origins.Name)
		</dd>
		<dt class="col-sm-2">
			@* @Html.DisplayNameFor(model => model.Distributors) *@ Вносител
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Distributors.Name)
		</dd>
		<dt class="col-sm-2">
			@* @Html.DisplayNameFor(model => model.Description) *@ Описание
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Description)
		</dd>
		<dt class="col-sm-2">
			@* @Html.DisplayNameFor(model => model.URLimage) *@ Снимка
		</dt>
		<dd class="col-sm-10">
			<img src="@Html.DisplayFor(model => model.URLimage)" width=100 />
		</dd>
		<dt class="col-sm-2">
			@* @Html.DisplayNameFor(model => model.Price)  *@ Цена
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Price)
		</dd>
		<dt class="col-sm-2">
			@* @Html.DisplayNameFor(model => model.Quantity) *@ Количество
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Quantity)
		</dd>
		<dt class="col-sm-2">
			@* @Html.DisplayNameFor(model => model.UnitOfMe) *@ Мерна единица
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.UnitOfMe)
		</dd>
		@*         <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DateRegister)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DateRegister)
        </dd> *@
	</dl>
</div>
<div>
	@if (User.IsInRole("Admin"))
	{
		<a asp-action="Edit" asp-route-id="@Model?.Id">Реактирай</a>

		
	}
	|
	<a asp-action="Index">Назад</a>
</div>
