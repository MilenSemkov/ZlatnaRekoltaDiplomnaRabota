
@using ZlatnaRekolta.Data
@model ZlatnaRekolta.Data.Product

@{
    ViewData["Title"] = "Създаване на продукт";
}

<h1 class="mb-4" style="color: goldenrod;">➕ Добавяне на нов продукт</h1>

<div class="card shadow-lg p-4">
    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

        <div class="mb-3">
            <label asp-for="Name" class="form-label">Наименование</label>
            <input asp-for="Name" class="form-control" placeholder="Пример: Ябълка" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="CategoryID" class="form-label">Категория</label>
            <select asp-for="CategoryID" class="form-select" asp-items="ViewBag.CategoryID"></select>
        </div>

        <div class="mb-3">
            <label asp-for="OriginID" class="form-label">Произход</label>
            <select asp-for="OriginID" class="form-select" asp-items="ViewBag.OriginID"></select>
        </div>

        <div class="mb-3">
            <label asp-for="DistributorID" class="form-label">Вносител</label>
            <select asp-for="DistributorID" class="form-select" asp-items="ViewBag.DistributorID"></select>
        </div>

        <div class="mb-3">
            <label asp-for="Description" class="form-label">Описание</label>
            <textarea asp-for="Description" class="form-control" rows="3" placeholder="Описание на продукта..."></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="URLimage" class="form-label">URL на изображение</label>
            <input asp-for="URLimage" class="form-control" placeholder="https://..." />
            <span asp-validation-for="URLimage" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Price" class="form-label">Цена (лв.)</label>
            <input asp-for="Price" class="form-control" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Quantity" class="form-label">Налично количество</label>
            <input asp-for="Quantity" class="form-control" />
            <span asp-validation-for="Quantity" class="text-danger"></span>
        </div>

        <div class="mb-4">
            <label asp-for="UnitOfMe" class="form-label">Мерна единица</label>
            <select asp-for="UnitOfMe" class="form-select" asp-items="@Html.GetEnumSelectList<UnitOfMeasure>()"></select>
            <span asp-validation-for="UnitOfMe" class="text-danger"></span>
        </div>

        <div class="form-actions mt-4">
            <button type="submit" class="btn-save">💾 Запази</button>
            <a asp-action="Index" class="btn-cancel">⬅ Назад</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
