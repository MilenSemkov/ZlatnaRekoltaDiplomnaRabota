@model ZlatnaRekolta.Data.Category

@{
    ViewData["Title"] = "Редакция на категория";
}

<h2 class="text-center mb-5">✏️ Редакция на категория</h2>

<div class="edit-form-container">
    <form asp-action="Edit">
        <input type="hidden" asp-for="Id" />

        <div class="form-group">
            <label asp-for="Name">Име</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Description">Описание</label>
            <textarea asp-for="Description" class="form-control" rows="3"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="form-actions mt-4">
            <button type="submit" class="btn-save">💾 Запази</button>
            <a asp-action="Index" class="btn-cancel">⬅ Назад</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}