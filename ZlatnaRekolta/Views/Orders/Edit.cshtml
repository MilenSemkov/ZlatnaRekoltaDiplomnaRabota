@using ZlatnaRekolta.Data
@model ZlatnaRekolta.Data.Order

@{
    ViewData["Title"] = "Редакция на поръчка";
}

<h2 class="text-center mb-5">✏️ Редакция на поръчка</h2>

<div class="card shadow-lg p-4">
    <form asp-action="Edit">
        <input type="hidden" asp-for="Id" />

        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

        <div class="mb-3">
            <label asp-for="ProductId" class="form-label">Продукт</label>
            <select asp-for="ProductId" class="form-select" asp-items="ViewBag.ProductId"></select>
            <span asp-validation-for="ProductId" class="text-danger"></span>
        </div>

        @if (Model.Products?.URLimage != null)
        {
            <div class="mb-3 text-center">
                <img src="@Model.Products?.URLimage" alt="Продуктово изображение" class="img-thumbnail" style="max-height: 200px;" />
            </div>
        }
        <div class="mb-3">
            <label asp-for="Quantity" class="form-label">Количество (@ViewBag.Unim)</label>
            <input asp-for="Quantity" class="form-control" type="number" min="0.001" step="0.01" value="1.000" />
            <span asp-validation-for="Quantity" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Description" class="form-label">Описание</label>
            <input asp-for="Description" class="form-control" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="form-actions mt-4">
            <button type="submit" class="btn-save">💾 Запази</button>
            <a asp-action="Index" class="btn-cancel">⬅ Назад</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
